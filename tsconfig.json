{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "nodenext",
    "target": "es2022",

    // module resolution
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // extras
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // safety
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    //* path mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tsconfig.json"]
}
